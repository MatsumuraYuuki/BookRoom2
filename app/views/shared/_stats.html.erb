<% @user ||= current_user %>
<div class="flex space-x-4 md:space-x-8 my-2 md:my-4">
  <%= link_to following_user_path(@user), 
      class: "text-center text-gray-600 hover:text-blue-600 hover:no-underline" do %>
    <strong id="following" class="block text-lg md:text-xl">
      <%= @user.following.count %>
    </strong>
    <span class="text-xs md:text-sm">following</span>
  <% end %>
  
  <%= link_to followers_user_path(@user), 
      class: "text-center text-gray-600 hover:text-blue-600 hover:no-underline" do %>
    <strong id="followers" class="block text-lg md:text-xl">
      <%= @user.followers.count %>
    </strong>
    <span class="text-xs md:text-sm">followers</span>
  <% end %>
</div>