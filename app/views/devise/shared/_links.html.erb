<div class="space-y-4">
  <%- if controller_name != 'sessions' %>
    <%= link_to "ログイン", new_session_path(resource_name), 
        class: "block text-sm text-indigo-600 hover:text-indigo-500" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "新規登録", new_registration_path(resource_name), 
        class: "block text-sm text-indigo-600 hover:text-indigo-500" %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "パスワードをお忘れですか？", new_password_path(resource_name), 
        class: "block text-sm text-indigo-600 hover:text-indigo-500" %>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "確認メールが届きませんでしたか？", new_confirmation_path(resource_name), 
        class: "block text-sm text-indigo-600 hover:text-indigo-500" %>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "アカウントの凍結解除方法が届きませんでしたか？", new_unlock_path(resource_name), 
        class: "block text-sm text-indigo-600 hover:text-indigo-500" %>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "#{OmniAuth::Utils.camelize(provider)}でログイン", 
          omniauth_authorize_path(resource_name, provider), 
          data: { turbo: false },
          class: "w-full text-sm text-center py-2 px-4 border border-gray-300 rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
    <% end %>
  <% end %>
</div>