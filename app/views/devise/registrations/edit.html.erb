<% provide(:title, '編集') %>

<div class="container mx-auto px-4 py-8">

  <div class="max-w-2xl mx-auto bg-white rounded-lg shadow-md p-6">
    <h2 class="text-2xl font-bold text-gray-800 mb-6">メールアドレス・パスワードの編集</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2"  %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-2 py-1 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="text-sm text-gray-600 mb-4">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="mb-4">
        <%= f.label :password, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-2 py-1 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        <% if @minimum_password_length %>
          <p class="text-sm text-gray-600 mt-1">Minimum <%= @minimum_password_length %> characters required</p>
        <% end %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-2 py-1 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div class="mb-4">
        <%= f.label :current_password, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full px-2 py-1 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div class="flex items-center mt-6">
        <%= f.submit "変更する", class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded" %>
      </div>
    <% end %>
    <div class="mt-6">
        <%= link_to "Back", :back, class: "text-blue-500 hover:text-blue-600" %>
      </div>
  </div>

</div>
