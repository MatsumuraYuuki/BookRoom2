<% provide(:title, "プロフィール") %>

<div class="container mx-auto px-4 py-8">
  <%# プロフィール覧 %>
  <div class="max-w-2xl mx-auto bg-white rounded-lg shadow-md p-8">
    <div class="flex items-center space-x-4 mb-6">

      <div class="w-20 h-20 bg-gray-200 rounded-full flex items-center justify-center">
        <span class="text-3xl text-gray-600">
          <%= @user.user_name[0] %>
        </span>
      </div>
      <div>
        <h1 class="text-2xl font-bold text-gray-800">
          <%= @user.user_name %> のプロフィール
        </h1>
      </div>

    </div>

    <%# フォロー統計とフォローボタン %>
    <div class="flex items-center justify-between mb-2">
      <div class="flex-1">
        <%= render 'shared/stats' %>
      </div>
      <div class="flex-none">
        <%= render 'follow_form' if user_signed_in? %>
      </div>
    </div>

    <div class="space-y-4">
      <div class="border-t pt-4">
        <h2 class="text-sm font-medium text-gray-500">メールアドレス</h2>
        <p class="text-gray-800 mt-1"><%= @user.email %></p>
      </div>
    </div>

    <% if current_user&.admin? && @user != current_user %>
      <div class="border-t pt-4">
        <%= link_to "ユーザーを削除", 
            user_path(@user), 
            data: { 
              turbo_method: :delete,
              turbo_confirm: "本当にこのユーザーを削除しますか？" 
            },
            class: "inline-block px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700 transition-colors duration-200" %>
      </div>
    <% end %>
  </div>


  <%# タブ切り替え(本棚) %>
  <div class="mt-20 pb-8 border-t border-2 pt-8">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-xl font-semibold text-gray-800 pt-4">
        <%= @user.user_name %>の本棚
      </h2>
      <%= link_to "すべての本を見る", bookshelves_path, class: "text-blue-600 hover:text-blue-800 hover:underline" %>
    </div>
    
    <% if @recent_books&.present? %>
      <!-- 木製の本棚風デザイン -->
      <div class="bg-amber-700 rounded-lg p-4 shadow-inner w-full">
        <!-- flex レイアウトに変更 -->
        <div class="flex flex-wrap -mx-2">
          <% @recent_books.each do |bookshelf| %>
            <!-- 各本のカードに明示的な幅を設定 -->
            <div class="w-1/2 sm:w-1/3 lg:w-1/5 px-2 mb-4">
              <div class="bg-orange-900 p-2 rounded shadow-md hover:shadow-lg transition-all transform hover:-translate-y-1 h-full flex flex-col">
                <div class="bg-gray-100 p-1 rounded shadow-inner mb-2 flex items-center justify-center flex-grow" style="min-height: 140px;">
                  <% if bookshelf.book.thumbnail_url.present? %>
                    <%= image_tag bookshelf.book.thumbnail_url, alt: bookshelf.book.title, class: "max-h-32 max-w-full" %>
                  <% else %>
                    <div class="text-center text-gray-500">
                      <div class="border border-gray-300 p-2 rounded">
                        <span class="text-xs"><%= bookshelf.book.title %></span>
                      </div>
                    </div>
                  <% end %>
                </div>
                <div class="text-xs text-white truncate text-center" title="<%= bookshelf.book.title %>">
                  <%= bookshelf.book.title %>
                </div>
                <!-- ステータスバッジ -->
                <div class="mt-1 flex justify-center">
                  <% case bookshelf.status %>
                  <% when 'want_to_read' %>
                    <span class="bg-blue-500 text-white text-xs px-2 py-0.5 rounded-full">読みたい</span>
                  <% when 'reading' %>
                    <span class="bg-green-500 text-white text-xs px-2 py-0.5 rounded-full">読書中</span>
                  <% when 'finished' %>
                    <span class="bg-purple-500 text-white text-xs px-2 py-0.5 rounded-full">完読</span>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="bg-amber-700 rounded-lg p-6 text-center">
        <p class="text-white mb-4">まだ本棚に本が登録されていません</p>
        <%= link_to "本を検索する", search_books_path, class: "bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded" %>
      </div>
    <% end %>
  </div>



  <%# タブ切り替え(投稿一覧) %>
  <div class="max-w-2xl mx-auto">
    <div class="mt-20 pb-8 border-t border-2 pt-8">
      <h2 class="text-xl font-semibold text-gray-800 mb-4 pt-4">
        <%= current_user == @user ? "タイムライン" : "#{@user.user_name}の投稿" %>
      </h2>
      
      <%# 自分のプロフならフィードを、他ならそのuserの投稿のみ表示 %>
      <% display_posts = current_user == @user ? @feed_posts : @posts %>
      
      <% if display_posts.present? %>
        <div class="space-y-4">
          <% display_posts.each do |post| %>
            <div class="bg-gray-50 rounded-lg p-4">
              <div class="flex justify-between items-start mb-2">
                <%# 自分のページかつフィード表示の場合は投稿者名を表示 %>
                <% if current_user == @user %>
                  <span class="text-sm font-medium text-gray-700">
                    <%= link_to post.user.user_name, user_path(post.user), class: "hover:text-blue-600 hover:underline" %>
                  </span>
                <% end %>
                <span class="text-sm text-gray-500">
                  <%= l post.created_at, format: :long %>
                </span>
              </div>
              
              <div class="text-gray-800">
                <%= post.content %>
              </div>
              
              <div class="mt-2 flex justify-end gap-6">
                <%= link_to "詳細", post_path(post), 
                    class: "text-sm text-gray-600 hover:text-indigo-800" %>
                
                <% if current_user == post.user %>
                  <%= link_to "編集", edit_post_path(post), 
                      class: "text-sm text-gray-600 hover:text-gray-800" %>
                  
                  <%= link_to "削除", post_path(post), 
                      data: { 
                        turbo_method: :delete,
                        turbo_confirm: "本当にこの投稿を削除しますか？" 
                      },
                      class: "text-sm text-red-600 hover:text-red-800" %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
        <div class="mt-4">
          <%= paginate display_posts %>
        </div>
      <% else %>
        <p class="text-gray-600">まだ投稿がありません。</p>
      <% end %>
    </div>   
  </div>  
</div>
